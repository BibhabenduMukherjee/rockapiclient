{
  "name": "rock-api-client",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production --config webpack.config.optimized.js",
    "build:size": "npm run build && du -sh dist/ && echo 'Bundle files:' && du -sh dist/*",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dev": "NODE_ENV=development webpack --mode development --watch & NODE_ENV=development electron .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "electron-rebuild",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "release": "npm run build && npm run dist",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "build": {
    "appId": "com.codeaum.rockapiclient",
    "productName": "RockApiClient",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/bundle.js",
      "dist/index.html",
      "main.js",
      "package.json",
      "preload.js"
    ],
    "asar": true,
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_APPLE_TEAM_ID"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "certificateFile": "build/certificate.p12",
      "certificatePassword": "",
      "signingHashAlgorithms": ["sha256"],
      "sign": "build/sign.js"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "public/icon.png",
      "maintainer": "RockApiClient Team <team@rockapiclient.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": null,
    "buildVersion": "1.0.1",
    "artifactName": "${productName}-${version}-${arch}-${os}.${ext}",
    "copyright": "Copyright Â© 2024 RockApiClient Team"
  },
  "keywords": [
    "api",
    "client",
    "rest",
    "http",
    "electron"
  ],
  "author": {
    "name": "RockApiClient Team",
    "email": "team@rockapiclient.com"
  },
  "license": "MIT",
  "description": "A powerful REST API client built with Electron and React",
  "homepage": "https://github.com/BibhabenduMukherjee/rockapiclient",
  "repository": {
    "type": "git",
    "url": "https://github.com/BibhabenduMukherjee/rockapiclient.git"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "babel-plugin-import": "^1.13.8",
    "buffer": "^6.0.3",
    "compression-webpack-plugin": "^11.1.0",
    "css-loader": "^7.1.2",
    "electron": "^28.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/highlight.js": "^9.12.4",
    "antd": "^5.26.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.3"
  }
}
